print("what do you choose?")
pick = int(input("Type 0 for Rock, 1 for Paper or 2 for Scissors."))
import random
random_number = random.randint(0, 2)
rock_paper_scissors = ["rock","paper","scissors"]

print("Your choice:")
print(rock_paper_scissors[pick])

print("Computers choice:")
print(rock_paper_scissors[random_number])

if pick == random_number:
    print("Draw")
if pick == 0 and random_number == 2:
    print("You win")
elif pick == 1 and random_number == 0:
    print("You win")
elif pick == 2 and random_number == 1:
    print("You win")
elif pick == 0 and random_number == 1:
    print("You lose")
elif pick == 1 and random_number == 2:
    print("You lose")
elif pick == 2 and random_number == 0:
    print("You lose")
else:
    print("invalid number; You lose")
